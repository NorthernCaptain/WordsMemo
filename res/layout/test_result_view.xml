<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/holoblue_dark"
            android:gravity="center_vertical|left"
            android:textStyle="bold"
            android:textSize="46sp"
            android:text="@string/score"
            android:layout_margin="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_score"
            android:gravity="center_vertical|right"
            android:textStyle="bold"
            android:text="@string/score"
            android:layout_margin="10dp"
            android:textSize="46sp"
            android:typeface="monospace"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/holorect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="26sp"
                    android:text="@string/user_name"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_user"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="26sp"
                    />
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:text="@string/tags_lbl"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_tags"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:ellipsize="end"/>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:text="@string/total_words"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_words"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    />
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:text="@string/total_errors"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_error"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/my_red"/>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:text="@string/time_spent"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_spent"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    />
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:text="@string/date_start"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_start_date"
                    android:gravity="center_vertical|right"
                    android:textStyle="normal"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    />
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/holoblue_dark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@color/holoblue_dark"
                    android:gravity="center_vertical|left"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:text="@string/date_finish"
                    android:layout_margin="10dp"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_finish_date"
                    android:gravity="center_vertical|right"
                    android:textStyle="normal"
                    android:text="@string/score"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@android:string/ok"
                android:id="@+id/result_ok_btn"
                android:paddingLeft="30dp" android:paddingRight="30dp"/>
    </LinearLayout>
</LinearLayout>